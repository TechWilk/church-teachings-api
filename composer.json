    "require": {
        "php": ">=7.4",
        "slim/slim": "^3.1",
        "monolog/monolog": "^2.6",
        "entomb/slim-json-api": "^1.2",
        "league/oauth2-server": "^6.1",
        "guzzlehttp/guzzle": "^7.1",
        "wa72/htmlpagedom": "^2.0",
        "illuminate/database": "^8.9",
        "league/html-to-markdown": "^4.10",
        "techwilk/bible-verse-parser": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "TechWilk\\Church\\Teachings\\": "src/classes/"
